<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <!-- Main persistence unit -->
  <persistence-unit name="PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>cloud.delaye.backend.entities.Event</class>
    <properties>
      <property name="eclipselink.connection-pool.default.initial" value="4"/>
      <property name="eclipselink.connection-pool.min" value="8"/>
      <property name="eclipselink.connection-pool.max" value="32"/>
      <property name="eclipselink.logging.logger" value="JavaLogger"/>
      <property name="eclipselink.logging.level" value="ALL"/>
      <property name="eclipselink.logging.level.sql" value="ALL"/>
      <property name="eclipselink.logging.parameters" value="true"/>
      <property name="jakarta.persistence.jdbc.driver" value="${delaye.cloud.backend.db.driver}"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://${delaye.cloud.backend.db.host}/${delaye.cloud.backend.db.name}?autoReconnectForPools=true&amp;autoCommit=true"/>
      <property name="jakarta.persistence.jdbc.user" value="${delaye.cloud.backend.db.username}"/>
      <property name="jakarta.persistence.jdbc.password" value="${delaye.cloud.backend.db.password}"/>
      <property name="eclipselink.cache.shared.default" value="false"/>
      <property name="eclipselink.target-database" value="MySQL"/>
      <!-- Schema generation: controlled by system property delaye.cloud.backend.schema.generation (none, drop-and-create-tables, create-tables) -->
      <property name="eclipselink.ddl-generation" value="${delaye.cloud.backend.schema.generation}"/>
      <property name="eclipselink.ddl-generation.output-mode" value="database"/>
    </properties>
  </persistence-unit>
  
  <!-- Persistence unit only used for schema generation -->
  <persistence-unit name="GenPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>cloud.delaye.backend.entities.Event</class>
    <properties>
      <property name="eclipselink.logging.logger" value="DefaultLogger"/>
      <property name="eclipselink.logging.level" value="WARNING"/>
      <property name="eclipselink.logging.level.sql" value="WARNING"/>
      <property name="eclipselink.logging.parameters" value="true"/>
      <property name="eclipselink.cache.shared.default" value="false"/>
      <property name="eclipselink.target-database" value="MySQL"/>
    </properties>
  </persistence-unit>
</persistence>
